<form action="/updateInfo" method="post">
	<input type="file" style="display:none">
	<div class="info">
		<div class="ProfilePic">
			<img src="sdfg">
			<span onclick="upload()">Change</span>
		</div>
		<div class="basicInfo">
			<div class="heading">
				Basic Info
			</div>
			<div class="basic">
				<span>Email : </span>
				<input type="email" class="Email" name="email" disabled>
				<span>Name : </span>
				<input type="text" class="name" name="name" required>
				<div>
					<div>
						<span>DOB : </span>
						<input type="text" class="dob" id="datepicker" name="dob" required>
					</div>
					<div>
						<span>Gender : </span>
						<select required class="gender" name="gender">
							<option>Male</option>
							<option>Female</option>
							<option>Transgender</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="basicInfo">
			<div class="heading">
				Contact Info
			</div>
			<div class="basic">
				<span>Phone : </span>
				<input type="text" class="phoneno" name="phone" required>
				<span>City : </span>
				<input type="text" class="city" name="city" required>
			</div> 
		</div>
		<div class="basicInfo">
			<div class="heading">
				Personal Info
			</div>
			<div class="basic">
				<span>Interests : </span>
				<input type="text" class="interests" name="interest" placeholder="Enter Interests">
				<span>Tell us a bit more about yourjourney : </span>
				<textarea class="userdetail" name="about"></textarea>
				<span>what are your expectations from the communities? </span>
				<textarea class="expectations" name="expectation"></textarea>
			</div>
		</div>
		<div class="action">
			<button type="submit" class="update" id="submit">Update</button><a href="" class="cancel">Cancel</a>
		</div>
	</div>
</form>