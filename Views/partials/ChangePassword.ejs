<form action="/changePassword" method="post">
	<div class="password">
		<% if(changed == 'changed') { %>
			<div class="Changed" style="padding: 20px;border: 1px solid rgb(229,229,229);text-align: center;">Password Successfully Changed</div>
		<% } %>
		<% if(changed == 'wrong') { %>
			<div class="Changed" style="padding: 20px;border: 1px solid rgb(229,229,229);text-align: center;">Wrong Password!</div>
		<% } %>
		<h1 class="head">
			Change Password
		</h1>
		<h4 class="old">
			Old Password: 
		</h4>
		<input type="text" name="old" class="textBox" id="old">
		<h4 class="new">
			New Password: 
		</h4>
		<input type="text" name="new" class="textBox" id="new">
		<button class="submit">Submit</button>
	</div>
</form>